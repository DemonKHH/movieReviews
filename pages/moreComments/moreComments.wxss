/* pages/common/common.wxml.wxss */

.container {
  height: 100%;
  width: 100%;
  background-color: #f2f2f2;
}

.container block {
  width: 100%;
}

view.text {
  display: flex;
  align-items: center;
  position: relative;
  padding: 10px 10px 10px 12px;
  font-size: 15px;
  color: #656565;
}

view.text:before {
  position: absolute;
  display: block;
  content: ' ';
  left: -5px;
  width: 2px;
  height: 100%;
  background-color: #09bb07;
}

.line_flag {
  width: 3px;
  height: 18px;
  display: inline-block;
  background-color: #09bb07;
}

view.text text {
  margin-left: 10px;
  line-height: 18px;
}

.item {
  padding: 10px;
  color: #787878;
}

.item image {
  display: block;
  width: 65px;
  height: 95px;
}

.item_middle {
  flex: 1;
  margin-left: 10px;
  max-width: 300px;
  overflow: hidden;
}

.item_middle .title {
  font-size: 16px;
  color: #333;
}

.item_middle .sub_title {
  font-size: 12px;
  color: #666;
  margin: 2px 0px;
}

.item_middle .actor {
  font-size: 12px;
  color: #666;
  margin: 2px 0px;
}

.item_right {
  max-width: 100px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.item_right .score {
  font-size: 12px;
  color: #cf616a;
}

.action {
  margin: 5px 2px 0 0;
  border: 1px solid #29cc6d;
  border-radius: 2px;
  color: #29cc6d;
  display: inline-block;
  padding: 2px 4px;
  font-size: 12px;
  line-height: 16px;
  text-align: center;
}

.movieSummary {
  margin: 10px;
  font-size: 14px;
}

.movieSummary .summaryContent {
  margin-top: 8px;
  font-size: 13px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
}

.text-show {
  -webkit-line-clamp: 0;
}

.text-hidden {
  -webkit-line-clamp: 4;
}

.movieSummary .textSpread {
  padding: 6px 5px 10px 0;
  text-align: right;
  font-size: 13px;
  color: #d4d6d9;
}

.actorBox {
  font-size: 12px;
  margin: 10px;
  width: 100%;
  white-space: nowrap;
  overflow-x: auto;
}

.movieAcotors {
  margin: 0 10px 0 0;
  display: inline-block;
}

.movieAcotors view {
  margin-top: 5px;
}

.movieAcotors .actorName, .movieAcotors .actorWork {
  max-width: 65px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.movieAcotors .actorImg {
  display: block;
  width: 65px;
  height: 95px;
}

.movieAcotors .actorImg image {
  height: 100%;
  width: 100%;
}

.actorTitle {
  margin: 0 0 0 10px;
  font-size: 14px;
}

.trailer {
  margin-bottom: 10px;
}
.trailer .actorBox .movieAcotors{
  margin:0 1px 0 0;
}
.trailer .trailerTitle {
  margin: 0 0 0 10px;
  font-size: 16px;
}

.trailer .movieAcotors .actorImg {
  display: block;
  width: 150px;
  height: 100px;
}

.comments {
  margin: 10px;
  background: #fff;
  padding: 15px;
  border-radius: 5px;
}

.comments image {
  height: 100%;
  width: 100%;
  border-radius: 50%;
}

.comments .commentsContent {
  margin: 10px 0;
  border-bottom: 1px solid #d1d4d8;
}

.comments .author .authorImg {
  height: 40px;
  width: 40px;
  margin: 0 5px 10px 0;
}

.comments .commentsTop {
  display: flex;
  vertical-align: center;
}

.comments .author .authorName {
  display: flex;
  flex-direction: column;
  text-align: left;
  vertical-align: center;
  font-size: 14px;
  margin-bttom: 5px;
}

.comments .author .commentsBottom {
  margin-bottom:20px;
}

.comments .author .commentsBottom {
  font-size: 13px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
}

